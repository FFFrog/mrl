{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C",
            "type": "shell",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-Wall",
                "-std=c11",
                "-fcolor-diagnostics",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "C++",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-Wall",
                "-std=c++11",
                "-fcolor-diagnostics",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
