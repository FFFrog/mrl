{
    //update settings
    "update.mode": "manual",
    "update.showReleaseNotes": false,

    //security settings
    "security.workspace.trust.enabled": false,

    //window settings
    "window.titleBarStyle":"custom",
    "window.commandCenter": false,

    //workbench settings
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "none",
    "workbench.editor.showTabs": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.layoutControl.enabled": false,

    //explorer settings
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    //editor settings
    "editor.fontSize": 13,
    "editor.minimap.enabled": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.overviewRulerBorder": false,
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on",
        "other": "on"
    },
    "editor.snippetSuggestions": "inline",
    "editor.bracketPairColorization.enabled": true,
    "editor.suggest.preview": true,
    "editor.suggest.showSnippets": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,

    //diffeditor settings
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": false,

    //search settings
    "search.useIgnoreFiles": false,

    //file settings
    "files.eol": "\n",
    "files.insertFinalNewline": true,

    //terminal settings
    "terminal.integrated.fontSize": 13,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.showLinkHover": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.env.osx": {
        "GOPROXY": "https://goproxy.cn,direct",
        "GOSUMDB": "sum.golang.google.cn",
        "GO111MODULE": "on"
    },

    //debug settings
    "debug.onTaskErrors": "abort",
    "debug.console.fontSize": 13,
    "debug.console.closeOnEnd": true,
    "debug.terminal.clearBeforeReusing": true,

    //breadcrumbs settings
    "breadcrumbs.enabled": false,

    //timeline settings
    "timeline.pageOnScroll": true,

    //extensions settings
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,

    //oneDarkPro settings
    "oneDarkPro.markdownStyle": false,

    //git settings
    "git.detectSubmodules": false,
    "git.detectSubmodulesLimit": 30,

    //vim settings
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.searchHighlightColor": "rgba(150, 150, 255, 0.3)",
    "vim.handleKeys": {
        "<C-n>": false,
        "<C-p>": false
    },

    //bookmarks settings
    "bookmarks.label.suggestion": "suggestWhenSelectedOrLineWhenNoSelected",
    "bookmarks.navigateThroughAllFiles": true,
    "bookmarks.showCommandsInContextMenu": false,
    "bookmarks.saveBookmarksInProject": true,

    //markdown settings
    "markdown-preview-enhanced.chromePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
    "markdownlint.config": {
        "MD029": {
            "style": "ordered"
        },
        "MD033": false
    },

    //c_cpp settings
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.intelliSenseEngineFallback": "disabled",
    "C_Cpp.intelliSenseCacheSize": 0,
    "C_Cpp.errorSquiggles": "enabledIfIncludesResolve",
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.default.includePath": [
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
        "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.5/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
        "/Library/Developer/CommandLineTools/usr/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
    ],
    "C_Cpp.default.macFrameworkPath": [
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
        "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.5/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
        "/Library/Developer/CommandLineTools/usr/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
    ],
    "C_Cpp.default.browse.path": [
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
        "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.5/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
        "/Library/Developer/CommandLineTools/usr/include",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
    ],

    //python settings
    "python.analysis.typeCheckingMode": "basic",
    "python.terminal.activateEnvironment": false,
    "python.envFile": "${workspaceFolder}/.vscode/.env"
}
